<!--
  Tool Name: Duct Flow Annotations - Settings
  Description: Dialog for selecting the annotation family and spacing.
  Author: Ajmal P.S.
  Version: 1.0.0
  Last Updated: 2025-12-21
  Revit Version: 2020
  Dependencies: Autodesk.Revit.DB, Autodesk.Revit.UI
-->
<Window x:Class="AJTools.UI.FlowDirectionSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Duct Flow Settings"
        MinWidth="360"
        ResizeMode="NoResize"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        Background="{DynamicResource BackgroundDark}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ModernStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10">
        <Border Background="{StaticResource CardBackground}"
                CornerRadius="8"
                Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Duct Flow Settings"
                           FontWeight="Bold"
                           FontSize="14"
                           Foreground="{StaticResource TextPrimary}"
                           Grid.Row="0"
                           Margin="0,0,0,10"/>

                <StackPanel Grid.Row="1" Margin="0,0,0,10">
                    <TextBlock Text="Annotation Family"
                               FontWeight="SemiBold"
                               FontSize="12"
                               Foreground="{StaticResource TextPrimary}"
                               Margin="0,0,0,4"/>
                    <ComboBox x:Name="FamilyCombo"
                              Height="28"
                              Background="{StaticResource BackgroundLight}"
                              Foreground="{StaticResource TextPrimary}"
                              BorderBrush="{StaticResource AccentBlue}"
                              BorderThickness="1"
                              HorizontalAlignment="Stretch"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="0,0,0,10">
                    <TextBlock Text="Spacing"
                               FontWeight="SemiBold"
                               FontSize="12"
                               Foreground="{StaticResource TextPrimary}"
                               Margin="0,0,0,4"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="SpacingBox"
                                 Grid.Column="0"
                                 Height="28"
                                 Style="{StaticResource ModernTextBox}"/>
                        <TextBlock x:Name="SpacingUnitText"
                                   Grid.Column="1"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource TextSecondary}"/>
                    </Grid>
                </StackPanel>

                <TextBlock x:Name="ErrorText"
                           Grid.Row="3"
                           Foreground="Crimson"
                           Margin="0,0,0,8"/>

                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="1"
                            Content="Start"
                            Style="{StaticResource ModernButton}"
                            Click="OnStart"
                            Height="30"
                            MinWidth="90"
                            Margin="0,0,8,0"/>
                    <Button Grid.Column="2"
                            Content="Cancel"
                            Style="{StaticResource SecondaryButton}"
                            Click="OnCancel"
                            Height="30"
                            MinWidth="70"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
