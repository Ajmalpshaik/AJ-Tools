<!--
  Tool Name: Linked ID Viewer
  Description: Dialog showing picked element ID and model source with copy support.
  Author: Ajmal P.S.
  Version: 1.0.0
  Last Updated: 2025-12-10
  Revit Version: 2020
  Dependencies: Autodesk.Revit.DB, Autodesk.Revit.UI
-->
<Window x:Class="AJTools.UI.LinkedIdViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Linked ID Viewer"
        MinHeight="160"
        MinWidth="200"
        ResizeMode="CanResizeWithGrip"
        SizeToContent="WidthAndHeight"
        Loaded="OnWindowLoaded"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        Background="{DynamicResource BackgroundDark}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ModernStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10">
        <Border Background="{StaticResource CardBackground}"
                CornerRadius="8"
                Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Element ID"
                           FontWeight="Bold"
                           FontSize="13"
                           Foreground="{StaticResource TextPrimary}"/>
                <TextBox x:Name="ElementIdBox"
                         Grid.Row="1"
                         Margin="0,6,0,10"
                         Style="{StaticResource ModernTextBox}"
                         IsReadOnly="True"
                         FontSize="14"
                         Height="28"
                         HorizontalScrollBarVisibility="Auto"/>

                <TextBlock Grid.Row="2"
                           Text="Model Source"
                           FontWeight="Bold"
                           FontSize="13"
                           Foreground="{StaticResource TextPrimary}"/>
                <TextBox x:Name="ModelSourceBox"
                         Grid.Row="3"
                         Margin="0,6,0,10"
                         Style="{StaticResource ModernTextBox}"
                         IsReadOnly="True"
                         Height="28"
                         HorizontalScrollBarVisibility="Auto"/>

                <Border Grid.Row="4"
                        Background="#13203A"
                        CornerRadius="6"
                        Padding="8"
                        BorderBrush="#22314F"
                        BorderThickness="1">
                    <TextBlock x:Name="InfoText"
                               Text="Copy the ID to reuse in filters, schedules, or linked searches."
                               TextWrapping="Wrap"
                               FontSize="12"
                               Foreground="{StaticResource TextSecondary}"/>
                </Border>

                <StackPanel Grid.Row="5"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,10,0,0">
                    <Button Content="Copy"
                            Style="{StaticResource ModernButton}"
                            Click="OnCopyId"
                            Height="34"
                            MinWidth="70"
                            Margin="0,0,8,0"/>
                    <Button Content="Close"
                            Style="{StaticResource SecondaryButton}"
                            Click="OnClose"
                            Height="34"
                            MinWidth="70"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
