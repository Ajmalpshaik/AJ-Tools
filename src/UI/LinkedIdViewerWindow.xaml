<!--
  Tool Name: Linked ID Viewer
  Description: Dialog showing picked element ID and model source with copy support.
  Author: Ajmal P.S.
  Version: 1.0.0
  Last Updated: 2025-12-10
  Revit Version: 2020
  Dependencies: Autodesk.Revit.DB, Autodesk.Revit.UI
-->
<Window x:Class="AJTools.UI.LinkedIdViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Linked ID Viewer"
        MinHeight="230"
        MinWidth="380"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        Background="{DynamicResource BackgroundDark}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../ModernStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="12">
        <Border Background="{StaticResource CardBackground}"
                CornerRadius="10"
                Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,8">
                    <TextBlock Text="Element ID"
                               FontWeight="Bold"
                               FontSize="14"
                               Foreground="{StaticResource TextPrimary}"/>
                    <TextBox x:Name="ElementIdBox"
                             Margin="0,6,0,0"
                             Style="{StaticResource ModernTextBox}"
                             IsReadOnly="True"
                             FontSize="16"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="0,4,0,12">
                    <TextBlock Text="Model Source"
                               FontWeight="Bold"
                               FontSize="14"
                               Foreground="{StaticResource TextPrimary}"/>
                    <TextBox x:Name="ModelSourceBox"
                             Margin="0,6,0,0"
                             Style="{StaticResource ModernTextBox}"
                             IsReadOnly="True"/>
                </StackPanel>

                <Border Grid.Row="3"
                        Background="#0F172A"
                        CornerRadius="8"
                        Padding="10"
                        BorderBrush="#22314F"
                        BorderThickness="1">
                    <TextBlock Text="Copy the ID to reuse in filters, schedules, or linked searches."
                               TextWrapping="Wrap"
                               FontSize="12"
                               Foreground="{StaticResource TextSecondary}"/>
                </Border>

                <StackPanel Grid.Row="4"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,12,0,0">
                    <Button Content="Copy"
                            Style="{StaticResource ModernButton}"
                            Click="OnCopyId"
                            Margin="0,0,8,0"/>
                    <Button Content="Close"
                            Style="{StaticResource SecondaryButton}"
                            Click="OnClose"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
