<!--
  Tool Name: Set Link Workset UI
  Description: Dialog to assign Revit links and CAD imports to a workset.
  Author: Ajmal P.S.
  Version: 1.0.0
  Last Updated: 2025-12-23
  Revit Version: 2020
  Dependencies: Autodesk.Revit.DB, Autodesk.Revit.UI
-->
<Window x:Class="AJTools.UI.SetLinkWorksetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assign Link Workset"
        Height="500"
        Width="450"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0"
               Content="Select links to move:"
               FontWeight="Bold"
               Foreground="#333"/>

        <ListBox Grid.Row="1"
                 x:Name="links_listbox"
                 Margin="0,5,0,0"
                 BorderBrush="#CCC"
                 Background="White">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}"
                              Content="{Binding Name}"
                              Margin="5"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,5,0,0">
            <Button Content="Select All"
                    Click="OnSelectAll"
                    Margin="0,0,5,0"
                    Padding="8,3"/>
            <Button Content="Select None"
                    Click="OnSelectNone"
                    Margin="0,0,5,0"
                    Padding="8,3"/>
            <Button Content="Invert Selection"
                    Click="OnInvertSelection"
                    Padding="8,3"/>
        </StackPanel>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    Margin="0,20,0,0">
            <Label Content="Select or type workset name:"
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   Foreground="#333"/>
            <ComboBox x:Name="workset_combobox"
                      Width="200"
                      VerticalAlignment="Center"
                      Margin="5,0,0,0"
                      IsEditable="True"/>
        </StackPanel>

        <Button Grid.Row="4"
                x:Name="assign_workset_button"
                Content="Assign Selected Links to Workset"
                Margin="0,20,0,0"
                Padding="10,8"
                FontWeight="Bold"
                Background="#007ACC"
                Foreground="White"
                Click="OnAssignWorkset"/>
    </Grid>
</Window>
