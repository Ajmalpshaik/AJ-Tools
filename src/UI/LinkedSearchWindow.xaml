<!--
  Tool Name: Linked Element Search
  Description: Dialog to search by Element ID across host and linked models and zoom to the result.
  Author: Ajmal P.S.
  Version: 1.0.0
  Last Updated: 2025-12-10
  Revit Version: 2020
  Dependencies: Autodesk.Revit.DB, Autodesk.Revit.UI
-->
<Window x:Class="AJTools.UI.LinkedSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Linked Element Search"
        MinHeight="310"
        MinWidth="420"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        Background="{DynamicResource BackgroundDark}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ModernStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="12">
        <Border Background="{StaticResource CardBackground}"
                CornerRadius="10"
                Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Linked Element ID"
                           FontWeight="Bold"
                           FontSize="14"
                           Foreground="{StaticResource TextPrimary}"
                           Grid.Row="0"/>
                <TextBox x:Name="ElementIdBox"
                         Grid.Row="1"
                         Margin="0,6,0,12"
                         HorizontalAlignment="Stretch"
                         Height="32"
                         Style="{StaticResource ModernTextBox}"/>

                <CheckBox x:Name="SearchAllCheck"
                          Grid.Row="2"
                          Content="Search all models (host + loaded links)"
                          Margin="0,0,0,10"
                          Style="{StaticResource ModernCheckBox}"
                          Checked="OnSearchAllChanged"
                          Unchecked="OnSearchAllChanged"/>

                <TextBlock Text="Model"
                           FontWeight="Bold"
                           FontSize="14"
                           Foreground="{StaticResource TextPrimary}"
                           Grid.Row="3"/>
                <ComboBox x:Name="LinkSelector"
                          Grid.Row="4"
                          Margin="0,6,0,12"
                          Height="32"
                          DisplayMemberPath="DisplayName"
                          SelectedValuePath="Instance"
                          IsSynchronizedWithCurrentItem="True"/>

                <Border Grid.Row="5"
                        Background="#0F172A"
                        CornerRadius="8"
                        Padding="10"
                        BorderBrush="#22314F"
                        BorderThickness="1">
                    <TextBlock Text="Choose a link or search all. Enter the Element ID from the linked model or host."
                               TextWrapping="Wrap"
                               FontSize="12"
                               Foreground="{StaticResource TextSecondary}"/>
                </Border>

                <StackPanel Grid.Row="6"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,10,0,0">
                    <TextBlock x:Name="ErrorText"
                               Foreground="Crimson"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>
                    <Button Content="Search"
                            Style="{StaticResource ModernButton}"
                            Click="OnSearch"
                            Margin="0,0,8,0"/>
                    <Button Content="Cancel"
                            Style="{StaticResource SecondaryButton}"
                            Click="OnCancel"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
