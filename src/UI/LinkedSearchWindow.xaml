<!--
  Tool Name: Linked Element Search
  Description: Dialog to search by Element ID across host and linked models and zoom to the result.
  Author: Ajmal P.S.
  Version: 1.0.0
  Last Updated: 2025-12-10
  Revit Version: 2020
  Dependencies: Autodesk.Revit.DB, Autodesk.Revit.UI
-->
<Window x:Class="AJTools.UI.LinkedSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Linked Element Search"
        MinHeight="240"
        MinWidth="300"
        ResizeMode="CanResizeWithGrip"
        SizeToContent="WidthAndHeight"
        Loaded="OnWindowLoaded"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        Background="{DynamicResource BackgroundDark}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ModernStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10">
        <Border Background="{StaticResource CardBackground}"
                CornerRadius="8"
                Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Linked Element ID"
                           FontWeight="Bold"
                           FontSize="14"
                           Foreground="{StaticResource TextPrimary}"
                           Grid.Row="0"/>
                <TextBox x:Name="ElementIdBox"
                         Grid.Row="1"
                         Margin="0,6,0,10"
                         HorizontalAlignment="Stretch"
                         Height="28"
                         Style="{StaticResource ModernTextBox}"/>

                <CheckBox x:Name="SearchAllCheck"
                          Grid.Row="2"
                          Content="Search all models (host + loaded links)"
                          Margin="0,0,0,8"
                          Style="{StaticResource ModernCheckBox}"
                          Checked="OnSearchAllChanged"
                          Unchecked="OnSearchAllChanged"/>

                <TextBlock Text="Models"
                           FontWeight="Bold"
                           FontSize="13"
                           Foreground="{StaticResource TextPrimary}"
                           Grid.Row="3"/>
                <Grid Grid.Row="4" Margin="0,6,0,10">
                    <ToggleButton x:Name="ModelDropdownButton"
                                  Height="28"
                                  Background="{StaticResource BackgroundLight}"
                                  Foreground="{StaticResource TextPrimary}"
                                  BorderBrush="{StaticResource AccentBlue}"
                                  BorderThickness="1"
                                  Padding="8,0"
                                  HorizontalContentAlignment="Stretch">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="ModelSummaryText"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"/>
                            <Path Grid.Column="1"
                                  Data="M 0 0 L 6 6 L 12 0 Z"
                                  Fill="{StaticResource TextSecondary}"
                                  Width="12"
                                  Height="6"
                                  Stretch="Uniform"
                                  Margin="6,0,0,0"
                                  VerticalAlignment="Center"/>
                        </Grid>
                    </ToggleButton>

                    <Popup x:Name="ModelDropdownPopup"
                           PlacementTarget="{Binding ElementName=ModelDropdownButton}"
                           Placement="Bottom"
                           StaysOpen="False"
                           AllowsTransparency="True"
                           IsOpen="{Binding ElementName=ModelDropdownButton, Path=IsChecked, Mode=TwoWay}"
                           Closed="OnModelDropdownClosed">
                        <Border Background="{StaticResource BackgroundLight}"
                                BorderBrush="{StaticResource AccentBlue}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="6"
                                MinWidth="{Binding ElementName=ModelDropdownButton, Path=ActualWidth}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Margin="2,0,2,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="24"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="90"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="1"
                                               Text="Model Name"
                                               FontSize="11"
                                               Foreground="{StaticResource TextSecondary}"/>
                                    <TextBlock Grid.Column="2"
                                               Text="Source"
                                               FontSize="11"
                                               Foreground="{StaticResource TextSecondary}"/>
                                </Grid>
                                <ListBox x:Name="LinkSelector"
                                         Grid.Row="1"
                                         MinHeight="90"
                                         MaxHeight="220"
                                         SelectionMode="Multiple"
                                         Style="{StaticResource ModernListBox}"
                                         ItemContainerStyle="{StaticResource ModernListBoxItem}"
                                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                         SelectionChanged="OnModelSelectionChanged">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="24"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="90"/>
                                                </Grid.ColumnDefinitions>
                                                <CheckBox Grid.Column="0"
                                                          IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}"
                                                          Style="{StaticResource ModernCheckBox}"
                                                          Margin="0"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"/>
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding DisplayName}"
                                                           TextTrimming="CharacterEllipsis"
                                                           ToolTip="{Binding DisplayName}"/>
                                                <TextBlock Grid.Column="2"
                                                           Text="{Binding SourceLabel}"
                                                           Foreground="{StaticResource TextSecondary}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>
                    </Popup>
                </Grid>

                <Border Grid.Row="5"
                        Background="#13203A"
                        CornerRadius="6"
                        Padding="8"
                        BorderBrush="#22314F"
                        BorderThickness="1"
                        Margin="0,0,0,6">
                    <TextBlock x:Name="InfoText"
                               Text="Use the dropdown to pick one or more models, or use Search all to include host and loaded links."
                               TextWrapping="Wrap"
                               FontSize="12"
                               Foreground="{StaticResource TextSecondary}"/>
                </Border>

                <Grid Grid.Row="6" Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="ErrorText"
                               Grid.Column="0"
                               Foreground="Crimson"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>
                    <Button Grid.Column="1"
                            Content="Search"
                            Style="{StaticResource ModernButton}"
                            Click="OnSearch"
                            Height="30"
                            MinWidth="80"
                            Margin="0,0,8,0"/>
                    <Button Grid.Column="2"
                            Content="Cancel"
                            Style="{StaticResource SecondaryButton}"
                            Click="OnCancel"
                            Height="30"
                            MinWidth="70"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
