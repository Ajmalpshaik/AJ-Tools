<!--
  Tool Name: Filter Pro UI
  Description: WPF interface for building, applying, and ordering view filters with graphics.
  Author: Ajmal P.S.
  Version: 1.0.0
  Last Updated: 2025-12-07
  Revit Version: 2020
  Dependencies: Autodesk.Revit.DB, Autodesk.Revit.UI
-->
<Window x:Class="AJTools.UI.FilterProWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Filter Pro" MinHeight="820" MinWidth="1230"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundDark}">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ModernStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header Section -->
        <Border Grid.Row="0" Background="{StaticResource BackgroundMedium}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Filter Pro" 
                               FontSize="26" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource AccentBlue}"/>
                    <TextBlock Text="by Ajmal PS"
                               FontSize="12"
                               Foreground="{StaticResource TextSecondary}"
                               Margin="0,2,0,0"/>
                    <TextBlock Text="Create and manage Revit filters from parameter values" 
                               FontSize="13" 
                               Foreground="{StaticResource TextSecondary}" 
                               Margin="0,5,0,0"/>
                </StackPanel>
                
                <!-- Preview Section -->
                <Border Grid.Column="2" 
                        Background="{StaticResource BackgroundLight}" 
                        CornerRadius="4" 
                        Padding="15,10"
                        MinWidth="250">
                    <StackPanel>
                        <TextBlock Text="Filter Name Preview" 
                                   FontSize="11" 
                                   Foreground="{StaticResource TextSecondary}"/>
                        <TextBlock x:Name="preview_text" 
                                   Text="Preview: Filter_Name_Here" 
                                   FontSize="14" 
                                   FontWeight="Medium"
                                   Foreground="{StaticResource AccentGreen}" 
                                   Margin="0,5,0,0"/>
                        <TextBlock x:Name="apply_scope_text"
                                   Text="Apply: Active View"
                                   FontSize="11"
                                   Foreground="{StaticResource TextSecondary}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <TabControl Margin="20" 
                        Background="{StaticResource BackgroundMedium}"
                        BorderBrush="{StaticResource AccentBlue}"
                        BorderThickness="1">

                <!-- Selection Tab -->
                <TabItem Header="Selection">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Categories -->
                        <GroupBox Header="1. Select Categories" 
                                  Grid.Column="0" 
                                  Style="{StaticResource ModernGroupBox}"
                                  Margin="0,0,5,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" 
                                           Text="Choose element categories to filter" 
                                           FontSize="11" 
                                           Foreground="{StaticResource TextSecondary}"
                                           Margin="0,0,0,5"/>

                                <ListBox x:Name="categories_listbox" 
                                         Grid.Row="1"
                                         Style="{StaticResource ModernListBox}"
                                         ItemContainerStyle="{StaticResource ModernListBoxItem}"
                                         SelectionMode="Extended" />
                            </Grid>
                        </GroupBox>

                        <!-- Parameters -->
                        <GroupBox Header="2. Select Parameters" 
                                  Grid.Column="1" 
                                  Style="{StaticResource ModernGroupBox}"
                                  Margin="5,0,5,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" 
                                           Text="Choose parameters to filter by" 
                                           FontSize="11" 
                                           Foreground="{StaticResource TextSecondary}"
                                           Margin="0,0,0,5"/>

                                <ListBox x:Name="parameters_listbox" 
                                         Grid.Row="1"
                                         Style="{StaticResource ModernListBox}"
                                         ItemContainerStyle="{StaticResource ModernListBoxItem}"
                                         SelectionMode="Single" />
                            </Grid>
                        </GroupBox>

                        <!-- Values -->
                        <GroupBox Header="3. Select Values" 
                                  Grid.Column="2" 
                                  Style="{StaticResource ModernGroupBox}"
                                  Margin="5,0,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" 
                                           Text="Choose values to create filters" 
                                           FontSize="11" 
                                           Foreground="{StaticResource TextSecondary}"
                                           Margin="0,0,0,5"/>

                                <Grid Grid.Row="1" Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="140"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0" Margin="0,0,6,0">
                                        <TextBox x:Name="value_search_textbox"
                                                 Style="{StaticResource ModernTextBox}"
                                                 ToolTip="Filter the value list"
                                                 Padding="30,5,5,5"/>
                                        <Image Source="pack://siteoforigin:,,,/Resources/search.png" 
                                               Height="16" 
                                               Width="16" 
                                               HorizontalAlignment="Left" 
                                               Margin="8,0,0,0"
                                               Opacity="0.6"/>
                                    </Grid>

                                    <ComboBox x:Name="value_sort_combobox"
                                              Grid.Column="1"
                                              SelectedIndex="0">
                                        <ComboBoxItem Content="A to Z" Tag="az"/>
                                        <ComboBoxItem Content="Z to A" Tag="za"/>
                                    </ComboBox>
                                </Grid>

                                <ListBox x:Name="values_listbox" 
                                         Grid.Row="2"
                                         Style="{StaticResource ModernListBox}"
                                         ItemContainerStyle="{StaticResource ModernListBoxItemSuccess}"
                                         SelectionMode="Extended"
                                         VirtualizingStackPanel.IsVirtualizing="True"
                                         VirtualizingStackPanel.VirtualizationMode="Recycling"
                                         ScrollViewer.CanContentScroll="True" />
                            </Grid>
                        </GroupBox>
                    </Grid>
                </TabItem>

                <!-- Configuration Tab -->
                <TabItem Header="Configuration">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">

                            <!-- Filter Rule Type -->
                            <GroupBox Header="Filter Rule Type" Style="{StaticResource ModernGroupBox}">
                                <StackPanel>
                                    <Grid x:Name="rule_type_panel" Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <RadioButton x:Name="radio_equals" 
                                                 Content="Equals (exact match)" 
                                                 IsChecked="True" 
                                                 Style="{StaticResource ModernRadioButton}"
                                                 GroupName="RuleTypeGroup"
                                                 Tag="equals"/>
                                            <RadioButton x:Name="radio_contains" 
                                                 Content="Contains" 
                                                 Style="{StaticResource ModernRadioButton}"
                                                 GroupName="RuleTypeGroup"
                                                 Tag="contains"/>
                                            <RadioButton x:Name="radio_starts" 
                                                 Content="Begins With" 
                                                 Style="{StaticResource ModernRadioButton}"
                                                 GroupName="RuleTypeGroup"
                                                 Tag="begins_with"/>
                                            <RadioButton x:Name="radio_ends" 
                                                 Content="Ends With" 
                                                 Style="{StaticResource ModernRadioButton}"
                                                 GroupName="RuleTypeGroup"
                                                 Tag="ends_with"/>
                                            <RadioButton x:Name="radio_has_value" 
                                                 Content="Has Value" 
                                                 Style="{StaticResource ModernRadioButton}"
                                                 GroupName="RuleTypeGroup"
                                                 Tag="has_value"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <RadioButton x:Name="radio_not_equals" 
                                                 Content="Does Not Equal" 
                                                 Style="{StaticResource ModernRadioButton}"
                                                 GroupName="RuleTypeGroup"
                                                 Tag="not_equals"/>
                                            <RadioButton x:Name="radio_not_contains" 
                                                 Content="Does Not Contain" 
                                                 Style="{StaticResource ModernRadioButton}"
                                                 GroupName="RuleTypeGroup"
                                                 Tag="not_contains"/>
                                            <RadioButton x:Name="radio_not_starts" 
                                                 Content="Does Not Begin With" 
                                                 Style="{StaticResource ModernRadioButton}"
                                                 GroupName="RuleTypeGroup"
                                                 Tag="not_begins_with"/>
                                            <RadioButton x:Name="radio_not_ends" 
                                                 Content="Does Not End With" 
                                                 Style="{StaticResource ModernRadioButton}"
                                                 GroupName="RuleTypeGroup"
                                                 Tag="not_ends_with"/>
                                            <RadioButton x:Name="radio_not_has_value" 
                                                 Content="Has No Value" 
                                                 Style="{StaticResource ModernRadioButton}"
                                                 GroupName="RuleTypeGroup"
                                                 Tag="has_no_value"/>
                                        </StackPanel>
                                    </Grid>
                                    <CheckBox x:Name="case_sensitive_checkbox" 
                                              Content="Case Sensitive" 
                                              Style="{StaticResource ModernCheckBox}"
                                              Margin="10,5,10,5"/>
                                </StackPanel>
                            </GroupBox>

                            <!-- Naming Convention -->
                            <GroupBox Header="Filter Naming Convention" 
                                      Style="{StaticResource ModernGroupBox}"
                                      Margin="5,15,5,5">
                                <StackPanel Margin="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Prefix -->
                                        <TextBlock Text="Prefix:" 
                                               Grid.Row="0" Grid.Column="0"
                                               Foreground="{StaticResource TextPrimary}" 
                                               VerticalAlignment="Center" 
                                               Margin="0,5"/>
                                        <TextBox x:Name="prefix_textbox" 
                                             Grid.Row="0" Grid.Column="1"
                                             Style="{StaticResource ModernTextBox}"
                                             Margin="0,5"/>

                                        <!-- Suffix -->
                                        <TextBlock Text="Suffix:" 
                                               Grid.Row="1" Grid.Column="0"
                                               Foreground="{StaticResource TextPrimary}" 
                                               VerticalAlignment="Center" 
                                               Margin="0,5"/>
                                        <TextBox x:Name="suffix_textbox" 
                                             Grid.Row="1" Grid.Column="1"
                                             Style="{StaticResource ModernTextBox}"
                                             Margin="0,5"/>

                                        <!-- Separator -->
                                        <TextBlock Text="Separator:" 
                                               Grid.Row="2" Grid.Column="0"
                                               Foreground="{StaticResource TextPrimary}" 
                                               VerticalAlignment="Center" 
                                               Margin="0,5"/>
                                        <TextBox x:Name="separator_textbox" 
                                             Grid.Row="2" Grid.Column="1"
                                             Style="{StaticResource ModernTextBox}"
                                             Margin="0,5"
                                             Text="_"/>

                                        <!-- Include Options -->
                                        <CheckBox x:Name="include_cat_checkbox" 
                                              Grid.Row="3" Grid.Column="1"
                                              Content="Include Category Name in Filter Name" 
                                              Style="{StaticResource ModernCheckBox}"
                                              Margin="0,10,0,5"
                                              IsChecked="True"/>

                                        <CheckBox x:Name="include_param_checkbox" 
                                              Grid.Row="4" Grid.Column="1"
                                              Content="Include Parameter Name in Filter Name" 
                                              Style="{StaticResource ModernCheckBox}"
                                              Margin="0,5"
                                              IsChecked="True"/>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Apply Tab -->
                <TabItem x:Name="apply_tab" Header="Apply (Active View)">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Margin="0,0,0,6" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Apply Scope:" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                            <RadioButton x:Name="apply_active_radio"
                                     Grid.Column="1"
                                     Content="Active View"
                                     IsChecked="True"
                                     Style="{StaticResource ModernRadioButton}"
                                     Margin="8,0,0,0"/>
                            <RadioButton x:Name="apply_multiple_radio"
                                     Grid.Column="2"
                                     Content="Selected Views"
                                     Style="{StaticResource ModernRadioButton}"
                                     Margin="8,0,0,0"/>
                                <Button x:Name="refresh_views_button"
                                    Grid.Column="4"
                                    Style="{StaticResource ModernButton}"
                                    Height="28"
                                    Margin="0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="pack://siteoforigin:,,,/Resources/refresh.png" Height="16" Width="16" Margin="0,0,6,0"/>
                                    <TextBlock Text="Refresh Views" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <Grid Grid.Row="1">
                            <GroupBox Header="Color Overrides (Shuffle / Apply)" Style="{StaticResource ModernGroupBox}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0">
                                        <CheckBox x:Name="color_proj_lines_checkbox"
                                              Content="Projection / Surface Lines"
                                              Style="{StaticResource ModernCheckBox}"
                                              IsChecked="True"/>
                                        <CheckBox x:Name="color_cut_lines_checkbox"
                                              Content="Cut Lines"
                                              Style="{StaticResource ModernCheckBox}"
                                              IsChecked="True"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="0" Grid.Column="1">
                                        <CheckBox x:Name="color_proj_patterns_checkbox"
                                              Content="Projection / Surface Patterns"
                                              Style="{StaticResource ModernCheckBox}"/>
                                        <CheckBox x:Name="color_cut_patterns_checkbox"
                                              Content="Cut Patterns"
                                              Style="{StaticResource ModernCheckBox}"/>
                                        <CheckBox x:Name="color_halftone_checkbox"
                                              Content="Halftone"
                                              Style="{StaticResource ModernCheckBox}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,6,0,0">
                                        <TextBlock Text="Pattern:" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <ComboBox x:Name="pattern_combo"
                                              Width="240"
                                              IsEditable="False"
                                              DisplayMemberPath="Name"
                                              SelectedValuePath="Id"
                                              ToolTip="Fill pattern to use when pattern overrides are enabled."/>
                                    </StackPanel>
                                </Grid>
                            </GroupBox>
                        </Grid>

                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1.2*"/>
                            </Grid.ColumnDefinitions>

                            <GroupBox Header="Active View" Grid.Column="0" Style="{StaticResource ModernGroupBox}">
                                <StackPanel>
                                    <TextBlock Text="Current active view:" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,6"/>
                                    <TextBlock x:Name="active_view_name_text"
                                           Text="(none)"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimary}"/>
                                </StackPanel>
                            </GroupBox>

                            <GroupBox Header="Select Views to Apply" Grid.Column="1" Style="{StaticResource ModernGroupBox}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0"
                                           Text="Choose one or more views when 'Selected Views' is enabled."
                                           Foreground="{StaticResource TextSecondary}"
                                           Margin="0,0,0,6"/>
                                    <ListBox x:Name="views_listbox"
                                         Grid.Row="1"
                                         Style="{StaticResource ModernListBox}"
                                         ItemContainerStyle="{StaticResource ModernListBoxItem}"
                                         SelectionMode="Extended"
                                         IsEnabled="False"
                                         VirtualizingStackPanel.IsVirtualizing="True"
                                         VirtualizingStackPanel.VirtualizationMode="Recycling"
                                         ScrollViewer.CanContentScroll="True"
                                         DisplayMemberPath="Display"/>
                                </Grid>
                            </GroupBox>
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>

            <Border x:Name="loading_indicator"
                    Grid.Row="0"
                    Background="#AA1E1E1E"
                    Visibility="Collapsed">
                <TextBlock Text="Loading, please wait..."
                           Foreground="{StaticResource TextPrimary}"
                           FontSize="18"
                           FontWeight="Medium"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
        </Grid>
        
        <!-- Footer Section -->
        <Border Grid.Row="2" Background="{StaticResource BackgroundMedium}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Status Text -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Status: " 
                               FontWeight="SemiBold" 
                               Foreground="{StaticResource TextSecondary}"
                               FontSize="12"/>
                    <TextBlock x:Name="status_text" 
                               Text="Ready" 
                               Foreground="{StaticResource TextPrimary}"
                               FontSize="12"/>
                </StackPanel>
                
                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <CheckBox x:Name="override_existing_checkbox" 
                              Content="Update Existing Filters (overwrite)" 
                              Style="{StaticResource ToggleSwitchCheckBox}"
                              Margin="0,0,20,0"
                              ToolTip="When on, existing filters with the same name will be updated with new categories and rules."/>

                    <Button x:Name="apply_view_button"
                            Style="{StaticResource ModernButton}"
                            Height="35"
                            Margin="0,0,20,0"
                            Background="{StaticResource AccentOrange}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://siteoforigin:,,,/Resources/apply.png" Height="16" Width="16" Margin="0,0,8,0"/>
                            <TextBlock Text="APPLY TO VIEW" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="shuffle_colors_button"
                            Style="{StaticResource ModernButton}"
                            Height="35"
                            Margin="0,0,20,0"
                            Background="{StaticResource AccentBlue}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://siteoforigin:,,,/Resources/shuffle.png" Height="16" Width="16" Margin="0,0,8,0"/>
                            <TextBlock Text="SHUFFLE COLORS" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="create_button" 
                            Style="{StaticResource ModernButton}"
                            Height="35"
                            Margin="0,0,20,0"
                            Background="{StaticResource AccentGreen}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://siteoforigin:,,,/Resources/create.png" Height="16" Width="16" Margin="0,0,8,0"/>
                            <TextBlock Text="CREATE FILTERS" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="close_button" 
                            Style="{StaticResource ModernButton}"
                            Height="35"
                            Background="#FF757575"
                            Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://siteoforigin:,,,/Resources/close.png" Height="16" Width="16" Margin="0,0,8,0"/>
                            <TextBlock Text="CLOSE" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
